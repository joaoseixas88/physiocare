generator client {
  provider = "prisma-client-js"	
	binaryTargets = ["native", "linux-musl"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
	
}

model user {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  created_at DateTime
  patients   patient[]
}

model patient {
  id          String        @id @default(uuid())
  name        String
  age         Int
  price       Float
  created_at  DateTime
  userId      String?
  user        user?         @relation(fields: [userId], references: [id])
  attendances attendances[]
}

model attendances {
  id         String   @id @default(uuid())
  created_at DateTime
  patientId  String?
  patient    patient? @relation(fields: [patientId], references: [id])
}

model homecare {
  id         String   @id @default(uuid())
  created_at DateTime
  price      Float
}
